@model IEnumerable<JedjanguiWeb.Models.Membre>

@{
    ViewBag.Title = JedjanguiWeb.Resources.Layout.Layout.TitreAjouter + JedjanguiWeb.Resources.Layout.Layout.TitreInscris;
}

<h2>InscrireMembre</h2>

@using (Html.BeginForm("inscrire","Exercice",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inscris Exercice</h4>
        <hr />
       

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Membre
                <div class="col-md-10">
                    @Html.DropDownList("CODEMEMBRE", (IEnumerable<SelectListItem>)ViewBag.MEMBRE)


                </div>
            </div>



            <div class="form-group">
                <div class="col-md-10">
                    Poste
                    <input name="POSTEMEMBREEXO" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        
    </div>
}

<div>
    @Html.ActionLink(JedjanguiWeb.Resources.Layout.Layout.TitreRetourALaListe, "Index")
</div>
