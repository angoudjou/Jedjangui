<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JeDjangui</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("JedjanguiOnline", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (Session["CODEASSO"] != null)
                    {

                        <li> @Html.ActionLink("Association", "Index", "Association") </li>
                        <li> @Html.ActionLink("Membres", "Index", "Membre") </li>
                        <li> @Html.ActionLink("Fonds", "Index", "Fond") </li>
                        <li> @Html.ActionLink("Exercice", "Index", "Exercice") </li>
                        <li> @Html.ActionLink("Seances", "Index", "Seance") </li>

                    }

                </ul>
                @Html.Partial("_LoginPartial")


            </div>




            @if (Session["NOMASSO"] != null)
            {
                <ul class="nav navbar-nav navbar-default ">
                    <li> @Session["NOMASSO"]</li>
                </ul>
            }

        </div>
    </div>
    @if (Session["CODEEXO"] != null)
    {
        <div>
            <ul class="nav nav-justified">
                <li><@Html.ActionLink("Membres Inscris", "Inscris", "Exercice")</li>
                <li><@Html.ActionLink("Soldes des fond", "balance", "FOND")</li>
                <li><@Html.ActionLink("Seances", "Index", "Seance", new { codeexo = Session["CODEEXO"].ToString() })</li>
            </ul>

        </div>
    }
    @if (Session["CODESEANCE"] != null)
    {
        <div>
            <ul class="nav nav-justified">
                <li>@Html.ActionLink("Presence", "Presence", "Seance")</li>
                <li>@Html.ActionLink("Soldes des fonds", "Balance", "Seance")</li>
                <li>@Html.ActionLink("Tontine", "Mouvementfond", "Seance")</li>
                <li>@Html.ActionLink("Djangui", "Mouvementfond", "Seance")</li>
                <li>@Html.ActionLink("Mouvement Financiers", "Mouvementfond", "Seance")</li>

                <li>@Html.ActionLink("Remboursement", "Index", "Remboursementpret", new { codeseance = Session["CODESEANCE"].ToString() }, null)</li>

                <li>@Html.ActionLink("Seances", "Index", "Seance", new { codeexo = Session["CODEEXO"].ToString() }, null)</li>

                <li>@Html.ActionLink("Prets", "Index", "Pret")</li>
            </ul>

        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASENGO TECHNOLOGIES</p>
            @{  var exo = "";
                var sc = "";
                if (Session["CODEEXO"] != null)
                {
                    exo = "Exercice: " + Session["CODEEXO"].ToString();
                }


            if (Session["CODESEANCE"] != null)
            {

                sc = " Seance " + Session["CODESEANCE"].ToString();

            }   }

            @exo
            @sc

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
