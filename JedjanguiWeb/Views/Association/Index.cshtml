@model PagedList.IPagedList<JedjanguiWeb.Models.Association>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Liste des associations";
}

<h2>Liste des associations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form class="form-group" action="~/Association/Index">
    @Html.Label("Chercher")
    <input type="search" name="SearchString" value=@ViewBag.SearchString >
    <input type="submit" class="btn btn-default"  />
</form>
<table class="table  table-striped table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CODEASSO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NOMASSO)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().SIGLEASSO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DATECREATIONASS)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().SLOGANASSO)
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CODEASSO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOMASSO)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.SIGLEASSO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DATECREATIONASS)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.SLOGANASSO)
        </td>


        <td>
           
            @Html.ActionLink(" <span class='glyphicon glyphicon-open'></span>", "Ouvrir", new { id = item.CODEASSO }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.CODEASSO }) |
            @Html.ActionLink("Details", "Details", new { id = item.CODEASSO }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CODEASSO })
        </td>
    </tr>
    }

</table>
<!-- navigation-->
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))